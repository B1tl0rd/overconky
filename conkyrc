conky.config = {
    alignment = 'top_right',
    background = false,
    border_width = 3,
    cpu_avg_samples = 2,
	default_color = '#00F088',
    default_outline_color = 'white',
    default_shade_color = 'white',
    draw_borders = false,
    draw_graph_borders = true,
    draw_outline = false,
    draw_shades = false,
    double_buffer = true,
    use_xft = true,
    font = 'AnonymicePowerline Nerd Font:size=13',
    gap_x = 0,
    gap_y = 35,
    minimum_height = 5,
	minimum_width = 5,
    net_avg_samples = 2,
    no_buffers = false,
    out_to_console = false,
    out_to_stderr = false,
    extra_newline = false,
    own_window = true,
	own_window_transparent = false,
    own_window_argb_visual = true,
    own_window_argb_value = 0,
    own_window_class = 'Conky',
    own_window_type = 'desktop',
    own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
    stippled_borders = 0,
    update_interval = 2.0,
    uppercase = false,
    use_spacer = 'none',
    show_graph_scale = false,
    show_graph_range = false,
    minimum_width = 420,
    border_inner_margin = 20,
    short_units = true,
    lua_load = './conky_draw.lua',
    lua_draw_hook_post = 'main'
}
--[[${image /home/gabmus/.conkyassets/bg2.png -p 0,0}]]
conky.text = [[
${color #FFFFFF} $color $nodename ${color #FFFFFF}-$color $sysname $kernel

${color #FFFFFF}Uptime:$color $uptime


${goto 116}$color$memperc%

${goto 295}$color${fs_free /}\
${goto 395}$color${fs_free /home}
${color #FFFFFF}CLK:$color $freq MHz\
${goto 220}$color${cpu cpu0}%
$color${cpugraph cpu1 50,40} ${cpugraph cpu2 50,40} ${cpugraph cpu3 50,40} ${cpugraph cpu4 50,40}    ${cpugraph cpu5 50,40} ${cpugraph cpu6 50,40} ${cpugraph cpu7 50,40} ${cpugraph cpu8 50,40}

${image ./conkyassets/cpu.png -p 195,110 -s 20x20}\
${image ./conkyassets/ram.png -p 52,96 -s 20x20}\
${image ./conkyassets/harddisk.png -p 296,96 -s 20x20}\
${image ./conkyassets/home.png -p 369,96 -s 20x20}\
\
${image ./conkyassets/temps.png -p 5,280 -s 35x35}\
${color #FFFFFF}Temperatures:
     ${color #FFFFFF}CPU0     CPU1     CPU2     CPU3
     $color${platform coretemp.0/hwmon/hwmon4 temp 1 input} °C\
    ${platform coretemp.0/hwmon/hwmon4 temp 2 input} °C\
    ${platform coretemp.0/hwmon/hwmon4 temp 3 input} °C\
    ${platform coretemp.0/hwmon/hwmon4 temp 4 input} °C

${color #FFFFFF}Networking:
${image ./conkyassets/eth.png -p 0,355 -s 20x20}   ${color #FFFFFF}\
$color ${upspeed enp4s0} ${color #FFFFFF}${alignr 250}$color ${downspeed enp4s0}${color #FFFFFF} 
${image ./conkyassets/wifi.png -p 0,375 -s 20x20}   ${color #FFFFFF}\
$color ${upspeed wlp5s0} ${color #FFFFFF}${alignr 250}$color ${downspeed elp5s0}${color #FFFFFF} 

${color #FFFFFF}Name              PID   CPU%   MEM%
${color}${top name 1}${top pid 1} ${top cpu 1} ${top mem 1}
${color}${top name 2}${top pid 2} ${top cpu 2} ${top mem 2}
${color}${top name 3}${top pid 3} ${top cpu 3} ${top mem 3}
${color}${top name 4}${top pid 4} ${top cpu 4} ${top mem 4}
]]
